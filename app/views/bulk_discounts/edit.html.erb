<h2> Edit Details For <%= @bulk_discount.percentage %>% </h2>

<%= form_with url: merchant_bulk_discount_path(@merchant, @bulk_discount), method: :patch, local: true do |f|  %>
  <%= f.label :percentage, "Percentage" %>
  <%= f.number_field :percentage, value: @bulk_discount.percentage %><br>
  <%= f.label :threshold, "Threshold" %>
  <%= f.number_field :threshold, value: @bulk_discount.threshold %><br>
  <%= f.submit "Submit" %>
<% end %>
